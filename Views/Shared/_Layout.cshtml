<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Business Managment System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top bg-success">
        <div class="container ">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Business Managment System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    @Html.ActionLink("POS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                    <!--Catagory-->
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">Catagory <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Setup", "Setup", "Catagory")</li>
                            <li>@Html.ActionLink("View", "AllCatagoryView", "Catagory")</li>

                        </ul>
                    </li>

                    <!--Product-->
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">Products <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Setup", "Setup", "Product")</li>
                            <li>@Html.ActionLink("View", "ProductsView", "Product")</li>
                        </ul>
                    </li>

                    <!--Sale-->
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown"aria-expanded="true">Sale <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Product Sale", "ProductSale", "Sale")</li>
                            
                        </ul>
                    </li>

                    <!--Stock-->
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown"aria-expanded="true">Stock <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Create New </a></li>
                            <li><a href="#">View </a></li>

                        </ul>
                    </li>

                    <!--Suplier-->
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown"aria-expanded="true" >Suplier <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Registration", "Registration", "Buyers")</li>
                            <li>@Html.ActionLink("Purchase", "PurchaseItems", "Purchase")</li>
                            <li>@Html.ActionLink("View", "SuplierList", "Buyers")</li>
                        </ul>
                    </li>

                    <!--Customer-->
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">Customer <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Registration", "Registration", "Customer")</li>
                            <li>@Html.ActionLink("View", "CustomerList", "Customer")</li>
                        </ul>
                    </li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                </ul>
            </div>
        </div>
            <!--This is By Default Nav bar-->
            @*<div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Catagory", "Setup", "Catagory") </li>
                    <li>@Html.ActionLink("Products", "Setup", "Product")</li>
                    <li>@Html.ActionLink("Purchase", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Sale", "ProductSale", "Sale")</li>
                    <li>@Html.ActionLink("Stock", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Suplier", "Registration", "Buyers")</li>
                    <li>@Html.ActionLink("Customer", "Registration", "Customer")</li>


                </ul>

            </div>*@
            <!-- Nav Bar Close-->
        
    </div>
    <div class="container body-content">
        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    </div>

   
    @RenderSection("scripts", required: false)
</body>
</html>
