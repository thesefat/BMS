@using Microsoft.Ajax.Utilities
@model BMS.Models.BaseModels.Customer

<br />
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title"> Registration of Customer </div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Create", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group ">
                                    @Html.LabelFor(model => model.Name, "Name *", htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        <label id="Name_warning_label"></label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        <input type="file" id="ImageData" name="ImageData" />
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.Code, "Customer Id *", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                <label id="Code_warning_label"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ContactNo, "Phone Number *", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.ContactNo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger" })
                                <label id="ContactNo_warning_label"></label>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                <label id="Email_warning_label"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.LoyaltyPoint, "Loyalty Point", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.LoyaltyPoint, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LoyaltyPoint, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-6 col-md-4">
                                <input type="submit" value="Create" id="saveButton" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>

    <div class="col-md-10 col-md-offset-1" id="table">
        <h2 align="center"> CUSTOMERS LIST</h2>
        <div class="col-md-12">

            <table class="table table-bordered table-striped table-hover table-responsive ">
                <thead>
                    <tr align="center" style="background-color:teal;color:white;font-weight:bold">
                        <td>Serial No</td>
                        <td>Customer Name</td>
                        <td>Contact No</td>
                        <td>Email</td>
                        <td>Loyality Point</td>
                        <td>Image</td>
                        <td>Options</td>

                    </tr>
                </thead>
                <tbody id="CustomerDetailsTable">  </tbody>
              
            </table>

        </div>
    </div>
</div>








<div class="row">
    @if (ViewBag.Message == "Added Successfully")
    {

        <div class="green">
            <p><strong>Success:</strong> @ViewBag.Message</p>
        </div>
    }
    else
    {
        <div class="red">
            <p><strong>Alert:</strong> @ViewBag.Message</p>
        </div>


    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Essential/CustomerValidation.js"></script>
    <script src="~/Scripts/Essential/CustomerViewLoader.js"></script>


}
